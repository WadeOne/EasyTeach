<div class="page-content">
    <div class="row">
        <form id="user-registration-form" action="http://localhost:56015/api/User/Register" method="post">
            <div class="large-6 medium-6 columns">
                <div class="large-8 medium-8">
                    <div class="login-wrapper">
                        <label>Год</label>
                        <input type="number" placeholder="Год" name="year" required />
                        <label>Курс</label>
                        <select>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                        <label>Группа</label>
                        <input type="number" min="1" placeholder="Группа" name="group" required />
                    </div>
                </div>
            </div>
            <div class="large-6 medium-6 columns">
                <div class="large-8 medium-8">
                    <div class="login-wrapper">
                        <label>Имя</label>
                        <input type="text" placeholder="Имя" name="name" required />
                        <label>Фамилия</label>
                        <input type="text" placeholder="Фамилия" name="surname" required />
                        <label>Почта</label>
                        <input type="email" placeholder="Почта" name="email" required />
                    </div>
                </div>
            </div>
            <button id="create-user-button" class="easy-teach-button">Создать</button>
        </form>
    </div>
</div>
