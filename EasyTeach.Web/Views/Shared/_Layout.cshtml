<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="../Scripts/vendor/bower_components/modernizr/modernizr.js"></script>
    <link rel="stylesheet" href="../Content/stylesheets/app.css" />
</head>
<body>
    <div class="page-wrapper registration-page">
        <header>
            <div class="row">
                <div class="logo">EasyTeach</div>
            </div>
        </header>
        <nav class="top-bar" data-topbar>
            <ul class="title-area">
                <!-- Title Area -->
                <li class="name"></li>
                <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
                <li class="toggle-topbar menu-icon"><a href="javascript:void(0)">Menu</a></li>
            </ul>
            <section class="top-bar-section row">
                <ul class="left">
                    <li class="active"><a href="#">Студенты</a></li>
                    <li class="divider"></li>
                    <li><a href="./grid.html">Таблица с баллами</a></li>
                    <li class="divider"></li>
                    <li><a href="./add_homework.html">Список заданий</a></li>
                    <li class="divider"></li>
                    <li><a href="./homeworks.html">Выполненые задания</a></li>
                    <li class="divider"></li>
                    <li><a href="#">Тесты</a></li>
                    <li class="divider"></li>
                </ul>
            </section>
        </nav>
        @RenderBody()
    </div>
    <footer>
        <div class="row">
            <div class="copyright">&copy; mmf 2014</div>
        </div>
    </footer>
    <script src="../Scripts/vendor/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="../Scripts/vendor/bower_components/foundation/js/foundation.min.js"></script>
    <script src="../Scripts/app/app.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
